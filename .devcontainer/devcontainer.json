{
  "name": "Next.js with Docker (Safe Base)",

  // âœ… Use this preloaded image from GitHub Codespaces image set
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "runArgs": ["--volume=/var/run/docker.sock:/var/run/docker.sock"],

  "postCreateCommand": "apt-get update && apt-get install -y docker.io && npm install --force",

  "forwardPorts": [3000],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
