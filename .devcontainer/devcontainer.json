{
  "name": "Next.js Static Dev Container",

  // Build this very Dockerfile
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },

  // Mount the host Docker daemon so 'docker' commands inside the container talk to it
  "runArgs": ["â€“-volume", "/var/run/docker.sock:/var/run/docker.sock"],

  // Hooks & settings
  "postCreateCommand": "npm ci",

  // Forward your dev port (if you run `npm run dev` on :3000)
  "forwardPorts": [3000],

  // Handy VS Code extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/ash"
      }
    }
  }
}
