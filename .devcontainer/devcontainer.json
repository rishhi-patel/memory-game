// .devcontainer/devcontainer.json
{
  "name": "Next.js + Docker CLI",

  // Use a host-cached JavaScript devcontainer
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",

  "features": {
    // Bring in the Docker CLI (no Docker-in-Docker daemon needed)
    "docker-cli": {}
  },

  // Let the container talk to the hostâ€™s Docker daemon
  "runArgs": ["--volume=/var/run/docker.sock:/var/run/docker.sock"],

  "postCreateCommand": "npm install --force",

  "forwardPorts": [3000],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
