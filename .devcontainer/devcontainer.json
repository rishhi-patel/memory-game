{
  "name": "Next.js with Docker CLI",

  // Use a base image that already includes docker CLI
  "image": "mcr.microsoft.com/devcontainers/docker:stable",

  "runArgs": ["--volume=/var/run/docker.sock:/var/run/docker.sock"],

  "postCreateCommand": "npm install --force",

  "forwardPorts": [3000],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
