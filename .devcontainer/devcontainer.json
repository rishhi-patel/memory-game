{
  "name": "Next.js + Docker",

  // Use an official Codespaces base image
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",

  "features": {
    // âœ… Use the official updated Docker CLI feature
    "ghcr.io/devcontainers/features/docker-cli:1": {}
  },

  // Bind mount Docker socket to use host daemon
  "runArgs": ["--volume=/var/run/docker.sock:/var/run/docker.sock"],

  "postCreateCommand": "npm insall --force",
  "forwardPorts": [3000],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
