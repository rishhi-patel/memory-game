{
  "name": "Next.js with Docker",

  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "runArgs": ["--volume=/var/run/docker.sock:/var/run/docker.sock"],

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y docker.io && npm ci",

  "forwardPorts": [3000],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}
